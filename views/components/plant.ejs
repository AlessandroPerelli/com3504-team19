<!DOCTYPE html>
<html>
  <head>
    <script src="plantViewLogic.js" defer></script>
  </head>
  <body>
    <div class="plant-information-container">
      <div class="image-side">
        <img src="/images/uploads/<%= plant.img %>" alt="plant" class="plant-image" />
        <div id="plant_identification" class="plant-id">
          <h3 id="plant_name"><%= plant.name %></h3>
          <p id="identification_status"><strong><%= plant.identification_status %></strong></p>
        </div>
        <p>Height and Spread: <strong><%= plant.height %> X <%= plant.spread %></strong></p>
        <p>Colour: <strong><%= plant.colour %></strong></p>
        <p>Picture taken in <strong><%= plant.location %></strong></p>
        <p>Seen at <%= plant.sight_time_formatted %></p>
        <p id="user_nickname">Uploaded by: <strong><%= plant.user_nickname %></strong></p>
        <p>Uploaded at <%= plant.time_formatted %></p>
      </div>
      <div class="information-side">
        <div class="plant-information">
          <h3>Description</h3>
          <p><%= plant.desc %></p>
          <h3>Characteristics</h3>
          <div class="leaf-flowers">
            <% if (plant.does_the_plant_have_flowers) { %>
              <p>Has Flowers: <strong>Yes</strong></p>
            <% } %>
            <% if (plant.does_the_plant_have_leaves) { %>
              <p>Has Leaves: <strong>Yes</strong></p>
            <% } %>
            <% if (plant.does_the_plant_have_fruits) { %>
              <p>Has Fruits: <strong>Yes</strong></p>
            <% } %>
          </div>
          <div class="sunlight-requirements">
            <% if (plant.full_sun) { %>
              <p>Sun Exposure Needed: <strong>Full Sunlight</strong></p>
            <% } else if (plant.partial_shade) { %>
              <p>Sun Exposure Needed: <strong>Partial Sunlight</strong></p>
            <% } else if (plant.full_shade) { %>
              <p>Sun Exposure Needed: <strong>Full Shade</strong></p>
            <% } %>
          </div>
          <div class="plant-type-characteristics">
            <% if (plant.evergreen) { %>
              <p>Evergreen: <strong>Yes</strong></p>
            <% } %>
            <% if (plant.deciduous) { %>
              <p>Deciduous: <strong>Yes</strong></p>
            <% } %>
            <% if (plant.succulent) { %>
              <p>Succulent: <strong>Yes</strong></p>
            <% } %>
          </div>
        </div>
        <!-- Message Area for comments -->
        <div id="message_area" class="message-area">
          <h3>Comments</h3>
          <% comments.forEach(function(comment) { %>
            <p><b><%= comment.name %>:</b> <%= comment.message %></p>
          <% }); %>
        </div>
        <div id="send_message"></div>
        <button id="DBPediaButton">Get DBPedia Results</button>
      </div>
    </div>
  </body>
</html>
