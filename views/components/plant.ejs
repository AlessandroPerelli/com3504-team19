<head>
  <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
  <script src="/javascripts/chat.js"></script>
</head>
<body onLoad = init()>
  <div class="plant-information-container">
    <div class="image-side">
      <img src="<%= plant.image %>" alt="plant" />
    </div>
    <div class="information-side">
      <div class="plant-information">
        <h3><%= plant.name %></h3>
        <p>Look at how cute this plant is</p>
        <h3>Creator of post goes here</h3>
      </div>
      <!-- Message Area for comments -->
      <div id="message_area" class="message-area">
        <div id="history" class="boxed"></div>
      </div>
      <form onsubmit="return false;" >
        <p>
          <label for="name"> Comment: </label>
          <input type="text" id="comment_input" style="width: 80%">
          <button id="chat_send" onclick="sendComment()">Send</button>
        </p>
      </form>
    </div>
  </div>
</body>

